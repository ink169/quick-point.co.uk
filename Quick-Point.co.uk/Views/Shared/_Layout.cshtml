		</div>*@
		<div>
			@RenderBody()
			<hr />
			<footer>
				<p>&copy; Sterling Law @DateTime.Now.Year. All Rights Reserved</p>
			</footer>
		</div>

		@Scripts.Render("~/bundles/jquery")
		@Scripts.Render("~/bundles/bootstrap")
		@RenderSection("scripts", required: false)
</body>
</html>
