<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quick-Point.co.uk</title>

    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    @Styles.Render("~/Content/css")
</head>
<body>
    <!-- ======= Mobile Menu ======= -->
    <div class="site-mobile-menu site-navbar-target">
        <div class="site-mobile-menu-header">
            <div class="site-mobile-menu-close mt-3">
                <span class="icofont-close js-menu-toggle"></span>
            </div>
        </div>
        <div class="site-mobile-menu-body"></div>
    </div>

    <div id="sticky-wrapper" class="sticky-wrapper" style="height: 85px;">
        <!-- ======= Header ======= -->
        <header class="site-navbar js-sticky-header site-navbar-target" role="banner">

            <div class="container">
                <div class="row align-items-center">

                    @*<div class="col-6 col-lg-2">
                                <h1 class="mb-0 site-logo"><a href="/Home/Index" class="mb-0">Home</a></h1>
                        </div>*@


                    <div class="col-12 col-md-12 d-none d-lg-block">
                        <nav class="site-navigation position-relative text-right" role="navigation">
                            @*<nav class="site-navigation position-relative" role="navigation">*@
                            <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
                                @*<li><a href="/Home/Index"><img src="~/Content/images/SL.jpg" alt="" class="hero-section-img" height="53" width="212" /></a></li>*@
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("Resources", "Resources", "Home")</li>
                                <li>@Html.ActionLink("Q&A", "FAQ", "Home")</li>
                                <li>@Html.ActionLink("About", "About", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                                <li><a href="/Home/FF"><img src="~/assets/images/Nav-Scrolled.png" alt="" class="hero-section-img" /></a> </li>
                                @*<li>@Html.ActionLink("Free Financial Analysis", "FFA", "Home")</li>*@
                            </ul>
                        </nav>
                    </div>

                    <div class="col-12 d-inline-block d-lg-none ml-md-0 py-3" style="position: relative; top: 3px;">
                        <a href="#" class="burger site-menu-toggle js-menu-toggle" data-toggle="collapse" data-target="#main-navbar">
                            <span></span>
                        </a>
                    </div>

                    @*<div style="margin-top: -13px;">
                            <a href="/Home/FFA">
                                <img src="~/Content/images/FA_sml.png" alt="" class="hero-section-img" />
                            </a>
                        </div>*@

                </div>
            </div>
        </header>
    </div>
    <div>
        @RenderBody()


    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script type="text/javascript">
        $("#fixed-form-container .body").hide();
        $("#fixed-form-container .button").click(function () {

            $(this).next("#fixed-form-container div").slideToggle(400);
            $(this).toggleClass("expanded");
        });


        // ajax post
        $("#subBtn").click(function () {

            if (($('#name').val() != '') && ($('#email').val() != '')) {
                $.ajax({
                    type: "POST",
                    url: "/home/subscribe",
                    data: { "name": $('#name').val(), "email": $('#email').val() },
                    success: function (response) {
                        if (response == null) {
                            //alert('ok');
                        } else {
                           // alert("Something went wrong");
                        }
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            }
        });  


    </script>


    @RenderSection("scripts", required: false)



</body>
</html>
