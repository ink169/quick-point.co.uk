@{
    ViewBag.Title = "FlexibleFurlough";
    Layout = "~/Views/Shared/_ArticleLayout.cshtml";
}
@Styles.Render("~/Content/FormStyle.css")


<section class="hero-section" id="hero">
    <div class="container">
        <div class="row">
            <div class="col-12 hero-text-image">
                <div class="row">
                    <div class="col-lg-5 iphone-wrap">
                        <a href="/Home/Index">
                            <img src="~/assets/images/Logo.svg" alt="" class="hero-section-img" />
                        </a>
                    </div>
                    <div class="col-lg-7 text-center text-lg-left" style="padding-top: 2rem;">
                        <h2 data-aos="fade-right">Quick-Point Letter Generator</h2>
                        <p class="mb-4" data-aos="fade-right" data-aos-delay="100">
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section><!-- End Hero -->
<div class="text-center">
    <h2>Re-Furlough Agreement Letter Generator</h2>
</div>
<div class="LetterGenForm row" style="display:inline-block;">
    @using (Html.BeginForm("ReFurl", "LetterGenerator", FormMethod.Post, new { enctype = "multipart/form-data", @class = "LetterGenForm row col-lg-12 col-md-12 col-sm-12" }))
    {
        <div class="container col-md-3 col-sm-12 formcol">
            <h4>Furlough Details</h4>
            <!-- Other Detail-->
            <div class="field">
                <label for="">
                    <i class="far fa-user"></i>Date Furlough Start
                </label>
                <input type="date" name="StartDate" placeholder="e.g. 01/01/2020" required />
            </div>
            <div class="field">
                <label for="">
                    <i class="far fa-user"></i>Expected Return Date
                </label>
                <input type="date" name="ReturnDate" required />
            </div>
            <div class="field">
                <label for="">
                    <i class="far fa-user"></i>Last Furlough Start Date
                </label>
                <input type="date" name="LStartDate" placeholder="e.g. 01/01/2020" required />
            </div>
            <div class="field">
                <label for="">
                    <i class="far fa-user"></i>Last Furlough Return Date
                </label>
                <input type="date" name="LReturnDate" required />
            </div>
            <div class="field">
                <label for="">
                    <i class="far fa-user"></i>Gross Sum of Furlough Pay
                </label>
                <input type="number" name="GrossPay" placeholder="£15,000" required />
            </div>
            <div class="field">
                <label for="">
                    <i class="far fa-user"></i>Who to return signed document to (email)
                </label>
                <input type="email" name="ReturnEmail" placeholder="john@quick-point.co.uk" required />
            </div>
        </div>
        <div class="container col-md-3 col-sm-12 formcol">
            <h4>Sender Details</h4>
            <!--Sending Adress-->
            <div class="field">
                <label for="Name of Sender">
                    <i class="far fa-user"></i>Name of Sending Business
                </label>
                <input type="text" name="SenderName" placeholder="e.g. Business 1" required />
            </div>
            <div class="field">
                <label for="">
                    <i class="far fa-user"></i>Sender First Line of Address
                </label>
                <input type="text" name="SenderAddress1" placeholder="e.g. 1 Apple Lane" required />
            </div>
            <div class="field">
                <label for="">
                    <i class="far fa-user"></i>Sender Second Line of Address
                </label>
                <input type="text" name="SenderAddress2" placeholder="e.g. Chelsea" required />
            </div>
            <div class="field">
                <label for="">
                    <i class="far fa-user"></i>Sender Third Line of Address
                </label>
                <input type="text" name="SenderAddress3" placeholder="e.g. London" required />
            </div>
            <div class="field">
                <label for="">
                    <i class="far fa-user"></i>Sender PostCode
                </label>
                <input type="text" name="SenderPostCode" placeholder="e.g. SW1 1AB" required />
            </div>
            <div class="field">
                <label for="">
                    <i class="far fa-user"></i>Sender Email
                </label>
                <input type="email" name="SenderEmail" placeholder="JohnSmith@Smith.com" required />
            </div>
            <div class="field">
                <label for="">
                    <i class="far fa-user"></i>Sender Name
                </label>
                <input type="text" name="SenderFirstName" placeholder="e.g. Josh SMith" required />
            </div>
            <div class="field">
                <label for="">
                    <i class="far fa-user"></i>Sender Position
                </label>
                <input type="text" name="SenderPosition" placeholder="e.g. Commercial Director" required />
            </div>
        </div>
        <div class="container col-md-3 col-sm-12 formcol">
            <!--Recipient Adress-->
            <h4>Recipient Details</h4>
            <div class="">
                <label for="Name of recipient">
                    <i class="far fa-user"></i>Name of recipient
                </label>
                <input type="text" name="RecipientName" placeholder="e.g. John Smith" required />
            </div>
            <div class="field">
                <label for="">
                    <i class="far fa-user"></i>Recipient First Line of Address
                </label>
                <input type="text" name="RecipientAddress1" placeholder="e.g. 1 Apple Lane" required />
            </div>
            <div class="field">
                <label for="">
                    <i class="far fa-user"></i>Recipient Second Line of Address
                </label>
                <input type="text" name="RecipientAddress2" placeholder="e.g. Chelsea" required />
            </div>
            <div class="field">
                <label for="">
                    <i class="far fa-user"></i>Recipient Third Line of Address
                </label>
                <input type="text" name="RecipientAddress3" placeholder="e.g. London" required />
            </div>
            <div class="field">
                <label for="">
                    <i class="far fa-user"></i>Recipient PostCode
                </label>
                <input type="text" name="RecipientPostCode" placeholder="e.g. SW1 1AB" required />
            </div>
            Please tick to agree with our T&C's
            <br />
            <input type="checkbox" name="GDPR" required style="width:auto;" />

            Your letter will be emailed to the sender email, please specify this email below:
            <div class="field">
                <label for="">
                    <i class="far fa-user"></i>Email to recieve letter
                </label>
                <input type="text" name="Email" placeholder="e.g. apple@orange.com" required />
            </div>
            <div style="width:100%; align-items:center; justify-content:center;">
                <button type="submit">Generate Letter</button>
            </div>

        </div>
    }
</div>