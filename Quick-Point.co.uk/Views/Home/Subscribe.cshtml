@{
    ViewBag.Title = "MeetTheTeam";
}

<section class="hero-section" id="hero">
    <div class="container">
        <div class="row">
            <div class="col-12 hero-text-image">
                <div class="row">
                    <div class="col-lg-5 iphone-wrap">
                        <a href="/Home/Index">
                            <img src="~/assets/images/Logo.svg" alt="" class="hero-section-img" />
                        </a>
                    </div>
                    <div class="col-lg-7 text-center text-lg-left" style="padding-top: 2rem;">
                        <h2 data-aos="fade-right">Contact Quick-Point</h2>
                        <p class="mb-4" data-aos="fade-right" data-aos-delay="100">
                            Subscribe to our mailing list for updates and news
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section><!-- End Hero -->

<main id="main">
    <!-- ======= Describe Section ======= -->
    <section class="section section-describe">

        <div class="container">
            <div class="row  mb-5">
                <div class="col-md-6" data-aos="fade-up">
                    <div style="height:80px;">

                    </div>
                    <h2>Subscribe to our mailing list</h2>
                    @using (Html.BeginForm("Subscribe", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div>
                            Name:<br />
                            <input type="text" name="name" />
                            <br />
                            <br />
                            Email: <br />
                            <input type="email" name="email" />
                            <br />
                            <br />
                            <input type="checkbox" name="checkbox" onclick="myFunction()" id="tAc" /><h6 style="font-weight:700;" id="writing">To subscribe, please tick to agree with our <a href="https://www.quick-point.co.uk/Home/Terms" style="text-decoration:underline;">Terms of Use and Privacy Policy</a></h6>
                            <br />
                            <input type="submit" value="Sign Up" id="submit" />

                        </div>
                        @ViewBag.Message
                    }

                </div>
                <div class="col-md-6">
                    <img src="~/Content/images/subscribe.jpg" style="height:500px; width:750px;"/>
                </div>
            </div>
        </div>

    </section>


    <script>
        function myFunction() {
            // Get the checkbox
            var checkBox = document.getElementById("tAc");
            // Get the output text
            var text = document.getElementById("submit");

            var writing = document.getElementById("writing");

            // If the checkbox is checked, display the output text
            if (checkBox.checked == true) {
                text.style.display = "block";
                writing.style.fontWeight = "normal";
                writing.style.textDecoration = "none";
                writing.textContent = "You have agreed to our T&Cs"
            }
            else if (checkBox.checked !== true) {
                text.style.display = "none";
                writing.style.fontWeight = "bold";
                writing.style.textDecoration = "underline";
                writing.textContent = "To upload, please tick to agree with our T&C's"
            }
            else {
                text.style.display = "none";
            }
        }
    </script>


</main><!-- End #main -->